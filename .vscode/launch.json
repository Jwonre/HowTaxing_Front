{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Android Hermes",
      "request": "launch",
      "type": "reactnativedirect",
      "cwd": "${workspaceFolder}",
      "enableDebug": false,
      "platform": "android"
    },
    {
      "name": "Debug Android",
      "request": "launch",
      "type": "reactnative",
      "platform": "android",
      "flavor": "develop"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Debug iOS",
      "request": "launch",
      "type": "reactnative",
      "platform": "ios"
    },
    {
      "name": "Attach to Packager",
      "request": "attach",
      "type": "reactnative"
    },
    {
      "name": "Debug Windows",
      "request": "launch",
      "type": "reactnative",
      "platform": "windows"
    },
    {
      "name": "Debug macOS",
      "request": "launch",
      "type": "reactnative",
      "platform": "macos"
    }
  ]
}